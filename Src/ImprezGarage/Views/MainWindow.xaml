<baseClasses:DialogViewBase
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:mahApps="http://metro.mahapps.com/winfx/xaml/controls"
                     xmlns:prism="http://prismlibrary.com/"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:inf="clr-namespace:ImprezGarage.Infrastructure;assembly=ImprezGarage.Infrastructure"
                     xmlns:baseClasses="clr-namespace:ImprezGarage.Infrastructure.BaseClasses;assembly=ImprezGarage.Infrastructure"
                     xmlns:mah="http://metro.mahapps.com/winfx/xaml/shared" 
                     x:Class="ImprezGarage.Views.MainWindow"
                     WindowStartupLocation="CenterScreen"
                     ShowIconOnTitleBar="False"
                     prism:ViewModelLocator.AutoWireViewModel="True"
                     Icon="{Binding Icon}"
                     Title="{Binding Title}"  Height="659" Width="858">
    <baseClasses:DialogViewBase.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </baseClasses:DialogViewBase.Resources>

    <baseClasses:DialogViewBase.RightWindowCommands>
        <mahApps:WindowCommands>
            <Button Content="{Binding SignInOut}" Command="{Binding SignOut}"/>
            <Button Content="Refresh" Command="{Binding RefreshCommand}" ToolTip="Refresh the current data."/>
            <Button Content="Settings" Command="{Binding Settings}" ToolTip="Open settings panel."/>
            <Button Content="." FontSize="25" Command="{Binding MinimizeToTray}" ToolTip="Minimize to system tray." Margin="0,-10,0,0"/>
        </mahApps:WindowCommands>
    </baseClasses:DialogViewBase.RightWindowCommands>

    <Grid>
        <!-- New UI -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="179"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" 
                        Grid.Column="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                <Image Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Temp Resources/GD.jpg"
                       Height="18"
                       Margin="0,0,5,0"/>
                <TextBlock Foreground="{StaticResource ImprezGarage.Main}" 
                           Text="ImprezGarage" 
                           FontSize="18"/>
            </StackPanel>


            <!-- Menu Strip -->
            <Border Grid.Column="0" Grid.Row="1" Background="{StaticResource ImprezGarage.Main}" CornerRadius="0,46,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="174"/>
                    </Grid.RowDefinitions>
                    <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.VehicleListRegion}" VerticalAlignment="Top"/>

                    <Grid Grid.Column="0" Grid.Row="1" Margin="17, 0, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="ACCOUNT DETAILS"
                                   FontWeight="Bold"
                                   FontSize="7"
                                   Foreground="{StaticResource ImprezGarage.Grey}"
                                   VerticalAlignment="Top"/>
                            <Rectangle Margin="12.5,1,0,0" 
                                   Height="1" 
                                   Width="90"
                                   Fill="{StaticResource ImprezGarage.Grey}"
                                   VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                                        VerticalAlignment="Top"
                                        Margin="0,16,0,0"
                                        Height="16">
                                    <Image Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Temp Resources/GD-MyDrive.jpg"/>
                                    <TextBlock Text="Storage" 
                                           Margin="10,0,0,0" 
                                           FontSize="7"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource ImprezGarage.Foreground}"/>
                                </StackPanel>

                                <Rectangle Margin="0,7,0,0"
                                       Height="3" 
                                       Width="127"
                                       Fill="{StaticResource ImprezGarage.Grey}"
                                       HorizontalAlignment="Left"/>

                                <TextBlock FontSize="6"
                                       Margin="0,6,0,0"
                                       Text="60.8 GB of 1 TB used"
                                       Foreground="{StaticResource ImprezGarage.Accent}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" 
                                        VerticalAlignment="Top"
                                        Margin="0,16,0,0"
                                        Height="16">
                                    <Image Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Temp Resources/GD-MyDrive.jpg"/>
                                    <TextBlock Text="Photos" 
                                           Margin="10,0,0,0" 
                                           FontSize="7"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource ImprezGarage.Foreground}"/>
                                </StackPanel>

                                <Rectangle Margin="0,7,0,0"
                                       Height="3" 
                                       Width="127"
                                       Fill="{StaticResource ImprezGarage.Grey}"
                                       HorizontalAlignment="Left"/>

                                <TextBlock FontSize="6"
                                       Margin="0,6,0,0"
                                       Text="10.3 GB of 1 TB used"
                                       Foreground="{StaticResource ImprezGarage.Accent}"/>
                            </StackPanel>

                            <TextBlock Grid.Row="2" Text="Upgrade Storage"
                                   FontWeight="Bold"
                                   FontSize="7"
                                   Margin="0,16,0,0"
                                   Foreground="{StaticResource ImprezGarage.Grey}"
                                   VerticalAlignment="Top"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <!-- Nav Bar -->
            <Grid Grid.Row="0" Grid.Column="1">
                <DockPanel>
                    <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,29,0">
                        <Button DockPanel.Dock="Right"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="15"
                            Height="15"
                            Style="{StaticResource CircleButtonStyle}"/>
                        <Button DockPanel.Dock="Right"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="72"
                            Height="26"
                            Margin="0,0,37,0"
                            Padding="0"
                            FontSize="8"
                            Foreground="{StaticResource ImprezGarage.Grey}"
                            FontWeight="Normal"
                            Style="{StaticResource RoundedRectangleButtonStyle}">
                            <DockPanel HorizontalAlignment="Stretch" Width="67">
                                <TextBlock DockPanel.Dock="Left"
                                       Text="Jessica"
                                       TextAlignment="Center"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,0"/>
                                <Image DockPanel.Dock="Left" Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Temp Resources/GD-Initial.png" HorizontalAlignment="Right"/>
                            </DockPanel>
                        </Button>
                    </DockPanel>
                    <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,38,0">
                        <Button DockPanel.Dock="Right"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="16"
                            Height="15"
                            Style="{StaticResource CircleButtonStyle}">
                            <Image Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Temp Resources/GD-Settings.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button DockPanel.Dock="Right"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="16"
                            Height="15"
                            Margin="0,0,15,0"
                            Style="{StaticResource CircleButtonStyle}">
                            <Image Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Temp Resources/GD-Help.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                        <Button DockPanel.Dock="Right"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="16"
                            Height="15"
                            Margin="0,0,15,0"
                            Style="{StaticResource CircleButtonStyle}">
                            <Image Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Temp Resources/GD-Bell.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Button>
                    </DockPanel>
                    <TextBox Style="{DynamicResource GreyTextBoxStyle}"/>
                </DockPanel>
            </Grid>


            <!-- Content Region -->
            <Grid Grid.Column="1" Grid.Row="1" Margin="42,0,29,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="68"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ContentControl Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,11"
                                prism:RegionManager.RegionName="{x:Static inf:RegionNames.VehicleHeaderRegion}"/>
               

                <Rectangle Grid.Row="1"
                       Height="1"
                       Fill="{StaticResource ImprezGarage.Grey}"
                       HorizontalAlignment="Stretch"/>

                <ContentControl Grid.Row="2" prism:RegionManager.RegionName="{x:Static inf:RegionNames.ContentRegion}" />
            </Grid>

            <ContentControl Grid.Row="0" Grid.RowSpan="2" 
                            Grid.Column="0" Grid.ColumnSpan="2"
                            Visibility="Collapsed" 
                            prism:RegionManager.RegionName="{x:Static inf:RegionNames.AuthenticateRegion}" />
        </Grid>

        <!-- Old UI To be removed after -->
        <Grid Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="425"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Border BorderBrush="Black" BorderThickness="1" Margin="5" Grid.Column="0">
                    <!--<ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.VehicleListRegion}" VerticalAlignment="Top"/>-->
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" Margin="5" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
                    <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.PetrolRegion}"/>
                </Border>

                <Border BorderBrush="Black" BorderThickness="1" Margin="5" Grid.Row="1" Grid.Column="0">
                    <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.ChecksRegion}" VerticalAlignment="Top"/>
                </Border>
            </Grid>

            <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.StatusBarRegion}" Grid.Row="2" />

            <mahApps:FlyoutsControl Grid.Row="0" Grid.RowSpan="2">
                <mahApps:Flyout Header="Settings" Position="Right" Width="300" IsOpen="{Binding IsSettingsOpen}">
                    <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.SettingsRegion}"/>
                </mahApps:Flyout>
            </mahApps:FlyoutsControl>


            <!--<ContentControl Grid.Row="0" Grid.RowSpan="3" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}" 
                        prism:RegionManager.RegionName="{x:Static inf:RegionNames.AuthenticateRegion}" />-->

        </Grid>
    </Grid>


</baseClasses:DialogViewBase>