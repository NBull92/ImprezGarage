<UserControl x:Class="ImprezGarage.Modules.MyGarage.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
             xmlns:vm="clr-namespace:ImprezGarage.Modules.MyGarage.ViewModels"
             xmlns:views="clr-namespace:ImprezGarage.Modules.MyGarage.Views"
             xmlns:conv="clr-namespace:ImprezGarage.Infrastructure.Converters;assembly=ImprezGarage.Infrastructure"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             Width="400">
    <UserControl.Resources>
        <conv:VehicleTypeToVisibilityConverter x:Key="VehicleTypeToVisibilityConverter"/>
        <Style x:Key="HiddenButton" BasedOn="{StaticResource MahApps.Metro.Styles.MetroButton}" TargetType="{x:Type Button}">
            <Setter Property="Visibility" Value="Hidden" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType={x:Type ListBoxItem}},Path=IsSelected}" Value="True">
                    <Setter Property="Visibility" Value="Visible" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding NotificationRequest}">
            <prism:PopupWindowAction IsModal="True" WindowStartupLocation="CenterScreen">
                <prism:PopupWindowAction.WindowStyle>
                    <Style TargetType="Window">
                        <Setter Property="ResizeMode" Value="NoResize"/>
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="150"/>
                    </Style>
                </prism:PopupWindowAction.WindowStyle>
            </prism:PopupWindowAction>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="5" HorizontalAlignment="Right" 
                Content="Add" 
                Command="{Binding AddNewVehicleCommand}" 
                CommandParameter="{x:Type views:AddVehicle}"/>
        <!--Style="{DynamicResource MetroCircleButtonStyle}"-->

        <ListBox Grid.Row="1" Margin="5" ItemsSource="{Binding Vehicles}" SelectedItem="{Binding SelectedVehicle}"
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <prism:InvokeCommandAction Command="{Binding SelectedVehicleChanged}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="0">
                        <StackPanel Margin="5,0,0,5" Width="198">
                            <TextBlock Grid.Row="0" Text="{Binding Registration}" 
                                       FontSize="24"
                                       Visibility="{Binding VehicleType.Id, Converter={StaticResource VehicleTypeToVisibilityConverter}, ConverterParameter=Car}" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Text="{Binding Registration}" 
                                       FontSize="24"
                                       Visibility="{Binding VehicleType.Id, Converter={StaticResource VehicleTypeToVisibilityConverter}, ConverterParameter=Motorbike}" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Text="{Binding Model}" 
                                       FontSize="24"
                                       Visibility="{Binding VehicleType.Id, Converter={StaticResource VehicleTypeToVisibilityConverter}, ConverterParameter=Bicycle}"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Row="1" VerticalAlignment="Center" >
                                <Run Text="{Binding Make}"/>
                                <Run Text=", "/>
                                <Run Text="{Binding Model}"/>
                            </TextBlock>
                        </StackPanel>

                        <Button Grid.Column="1" Content="Edit" Command="{Binding EditVehicleCommand}"
                            VerticalAlignment="Center" Padding="5,2,5,2" Width="50" Margin="5"
                                Style="{StaticResource HiddenButton}"/>

                        <Button Grid.Column="2" Content="Report" Command="{Binding EditVehicleCommand}"
                            VerticalAlignment="Center" Padding="5,2,5,2" Width="50" Margin="5"
                                Style="{StaticResource HiddenButton}"/>


                        <Button Grid.Column="3" Content="Delete" Command="{Binding DeleteVehicleCommand}"
                            VerticalAlignment="Center" Padding="5,2,5,2" Width="50" Margin="5"
                                Style="{StaticResource HiddenButton}"/>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>