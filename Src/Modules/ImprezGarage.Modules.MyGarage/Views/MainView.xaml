<UserControl x:Class="ImprezGarage.Modules.MyGarage.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"   
             xmlns:vm="clr-namespace:ImprezGarage.Modules.MyGarage.ViewModels"
             xmlns:views="clr-namespace:ImprezGarage.Modules.MyGarage.Views"
             xmlns:conv="clr-namespace:ImprezGarage.Infrastructure.Converters;assembly=ImprezGarage.Infrastructure"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
             Width="400">
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding NotificationRequest}">
            <prism:PopupWindowAction IsModal="True" WindowStartupLocation="CenterScreen">
                <prism:PopupWindowAction.WindowStyle>
                    <Style TargetType="Window">
                        <Setter Property="ResizeMode" Value="NoResize"/>
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="150"/>
                    </Style>
                </prism:PopupWindowAction.WindowStyle>
            </prism:PopupWindowAction>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.Resources>
            <conv:VehicleTypeToVisibilityConverter x:Key="VehicleTypeToVisibilityConverter"/>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="5" HorizontalAlignment="Right" 
                Content="Add" 
                Command="{Binding AddNewVehicleCommand}" 
                CommandParameter="{x:Type views:AddVehicle}"/>
        <!--Style="{DynamicResource MetroCircleButtonStyle}"-->

        <ListBox Grid.Row="1" Margin="5" ItemsSource="{Binding Vehicles}" SelectedItem="{Binding SelectedVehicle}"
                  ScrollViewer.HorizontalScrollBarVisibility="Hidden">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <prism:InvokeCommandAction Command="{Binding SelectedVehicleChanged}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type vm:VehicleViewModel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Registration}" 
                                   Visibility="{Binding VehicleType, Converter={StaticResource VehicleTypeToVisibilityConverter}, ConverterParameter=Car}" 
                                   VerticalAlignment="Center" Margin="5" Width="255"/>
                        <TextBlock Grid.Column="0" Text="{Binding Registration}" 
                                   Visibility="{Binding VehicleType, Converter={StaticResource VehicleTypeToVisibilityConverter}, ConverterParameter=Motorbike}" 
                                   VerticalAlignment="Center" Margin="5" Width="255"/>
                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="5" Width="255" 
                                   Visibility="{Binding VehicleType, Converter={StaticResource VehicleTypeToVisibilityConverter}, ConverterParameter=Bicycle}">
                                <Run Text="{Binding Make}"/>
                                <Run Text=" - "/>
                                <Run Text="{Binding Model}"/>
                        </TextBlock>
                        <Button Grid.Column="1" Content="Edit" Command="{Binding EditVehicleCommand}" d:DataContext="{d:DesignInstance Type=vm:VehicleViewModel}"
                        VerticalAlignment="Center" Padding="5,2,5,2" Width="46" Margin="5"/>
                        <Button Grid.Column="2" Content="Delete" Command="{Binding DeleteVehicleCommand}" d:DataContext="{d:DesignInstance Type=vm:VehicleViewModel}"
                        VerticalAlignment="Center" Padding="5,2,5,2" Width="46" Margin="5"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</UserControl>
