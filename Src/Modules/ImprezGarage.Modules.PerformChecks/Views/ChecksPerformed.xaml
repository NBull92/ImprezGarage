<UserControl x:Class="ImprezGarage.Modules.PerformChecks.Views.ChecksPerformed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"             
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ImprezGarage.Modules.PerformChecks.ViewModels"
             mc:Ignorable="d"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="400"
             d:DataContext="{d:DesignInstance Type=vm:ChecksPerformedViewModel}">

    <ListBox ItemsSource="{Binding MaintainanceChecks}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <prism:InvokeCommandAction Command="{Binding OpenMaintenanceCheck}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Margin="5" Width="260">
                            <Run Text="{Binding MaintenanceCheckType.Type}"/>
                            <Run Text=" - "/>
                            <Run Text="{Binding DatePerformed, StringFormat=D}"/>
                    </TextBlock>
                    
                    <Button Grid.Column="1" 
                            ToolTip="Edit" 
                            Command="{Binding EditMaintenanceCheckCommand}" 
                            d:DataContext="{d:DesignInstance Type=vm:MaintenanceCheckViewModel}"
                            Background="{x:Null}" 
                            BorderThickness="0"
                            Width="48" 
                            Margin="0">
                        <Image Source="pack://application:,,,/ImprezGarage.Modules.PerformChecks;component/Resources/icons8-edit-24.png"
                                    Width="24" Height="24"/>
                    </Button>
                    
                    <Button Grid.Column="2" 
                            Command="{Binding DeleteMaintenanceCheckCommand}" 
                            ToolTip="Delete"
                            d:DataContext="{d:DesignInstance Type=vm:MaintenanceCheckViewModel}"
                            Background="{x:Null}" 
                            BorderThickness="0"
                            Width="48" 
                            Margin="0">
                        <Image Source="pack://application:,,,/ImprezGarage.Infrastructure;component/Resources/icons8-close-window-24.png"
                                    Width="24" Height="24"/>
                    </Button>
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
