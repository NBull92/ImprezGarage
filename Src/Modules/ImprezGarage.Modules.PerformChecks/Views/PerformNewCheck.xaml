<UserControl x:Class="ImprezGarage.Modules.PerformChecks.Views.PerformNewCheck"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="530">
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding NotificationRequest}">
            <prism:PopupWindowAction IsModal="True" WindowStartupLocation="CenterScreen">
                <prism:PopupWindowAction.WindowStyle>
                    <Style TargetType="Window">
                        <Setter Property="ResizeMode" Value="NoResize"/>
                        <Setter Property="Width" Value="250"/>
                        <Setter Property="Height" Value="150"/>
                    </Style>
                </prism:PopupWindowAction.WindowStyle>
            </prism:PopupWindowAction>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding SelectedMaintenanceCheckType.Type, Mode=TwoWay}"/>

        <!--Air Filter-->
        <CheckBox Grid.Row="1" Grid.Column="0" Content="Check Air Filter:" Margin="5" Height="25"
                   VerticalContentAlignment="Center" IsChecked="{Binding CheckedAirFilter,Mode=TwoWay}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Height="25" Text="{Binding AirFilterNotes, Mode=TwoWay}"/>

        <!--Replaced Air Filter-->
        <CheckBox Grid.Row="2" Grid.Column="0" Content="Replaced Air Filter:"
                   ToolTip="Perform every 20,000 miles." Margin="5" Height="25"
                   VerticalContentAlignment="Center" IsChecked="{Binding ReplacedAirFilter,Mode=TwoWay}"/>

        <!--Check coolant levels-->
        <CheckBox Grid.Row="3" Grid.Column="0" Content="Check Coolant Levels:" Margin="5" Height="25"
                   VerticalContentAlignment="Center" IsChecked="{Binding CheckCoolantLevels,Mode=TwoWay}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Height="25" Text="{Binding CoolantNotes, Mode=TwoWay}"/>

        <!--Flushed system and changed coolant-->
        <CheckBox Grid.Row="4" Grid.Column="0" Content="Flushed System and Changed Coolant:"
                  ToolTip="Perform once a year." Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding FlushedSystemAndChangeCoolant,Mode=TwoWay}"/>

        <!--Change fan belt or serpentine belt-->
        <CheckBox Grid.Row="5" Grid.Column="0" Content="Change Fan Belt or Serpentine Belt:"
                  Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding ChangeFanBelt,Mode=TwoWay}"/>

        <!--Checked battery-->
        <CheckBox Grid.Row="6" Grid.Column="0" Content="Checked Battery:"
                  ToolTip="Peform monthly." Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding CheckedBattery,Mode=TwoWay}"/>
        <TextBox Grid.Row="6" Grid.Column="1"  Height="25" Text="{Binding BatteryNotes, Mode=TwoWay}"/>

        <!--Replaced battery-->
        <CheckBox Grid.Row="7" Grid.Column="0" Content="Replaced Battery:"
                  ToolTip="Peform when needed." Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding ReplacedBattery,Mode=TwoWay}"/>

        <!--Check oil levels-->
        <CheckBox Grid.Row="8" Grid.Column="0" Content="Check Oil levels:"
                  ToolTip="Peform monthly." Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding CheckedOilLevels,Mode=TwoWay}"/>
        <TextBox Grid.Row="8" Grid.Column="1" Height="25" Text="{Binding OilLevelNotes, Mode=TwoWay}"/>

        <!--changed oil-->
        <CheckBox Grid.Row="9" Grid.Column="0" Content="Changed Oil:" Height="25"
                  ToolTip="Peform every six months or 5,000 miles." Margin="5"
                   VerticalContentAlignment="Center" IsChecked="{Binding ChangedOil,Mode=TwoWay}"/>

        <!--replace oil filter-->
        <CheckBox Grid.Row="10" Grid.Column="0" Content="Replace Oil Filter:"
                  ToolTip="Peform every oil change." Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding ReplacedOilFilter,Mode=TwoWay}"/>

        <!--Checked automatic transmission fluid level-->
        <CheckBox Grid.Row="11" Grid.Column="0" Content="Checked Automatic Transmission Fluid level:"
                  Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding CheckAutoTransmissionFluid,Mode=TwoWay}"/>
        <TextBox Grid.Row="11" Grid.Column="1" Height="25"  Text="{Binding AutoTransmissionFluidNotes,Mode=TwoWay}"/>

        <!--Added automatic transmission fluid levels-->
        <CheckBox Grid.Row="12" Grid.Column="0" Content="Added Automatic Transmission Ffluid levels:"
                   Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding AddedAutoTransmissionFluid,Mode=TwoWay}"/>

        <!--Checked power steering fluid level-->
        <CheckBox Grid.Row="13" Grid.Column="0" Content="Checked Power Steering Fluid level:"
                  Margin="5" Height="25" VerticalContentAlignment="Center"
                  IsChecked="{Binding CheckPowerSteeringFluidLevels,Mode=TwoWay}"/>
        <TextBox Grid.Row="13" Grid.Column="1" Height="25" Text="{Binding PowerSteeringNotes,Mode=TwoWay}" />

        <Grid Grid.Row="14" Grid.ColumnSpan="2" HorizontalAlignment="Right" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="{Binding SubmitText}" Command="{Binding SubmitCommand}" Margin="5"  Width="175"/>
            <Button Grid.Column="1" Content="Cancel" Command="{Binding CancelCommand}"  Margin="5"  Width="175"/>
        </Grid>
    </Grid>
</UserControl>