<UserControl x:Class="ImprezGarage.Modules.PetrolExpenditure.Views.PetrolExpenditure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"             
             xmlns:prism="http://prismlibrary.com/"             
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Margin="5"
             HorizontalAlignment="Right"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Height="255">
    <StackPanel>
        <DockPanel HorizontalAlignment="Right">
            <!--<TextBlock Text="{Binding Label}"/>-->
            <Button DockPanel.Dock="Right" Content="Add" Command="{Binding AddExpenditureCommand}" Width="34" Height="27"/>
            <!--Style="{DynamicResource MetroCircleButtonStyle}"-->
        </DockPanel>
        <ListBox Grid.Row="1" ItemsSource="{Binding Expenses}" Height="228" Margin="0,5,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <prism:InvokeCommandAction Command="{Binding OpenMaintenanceCheck}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Grid.Column="0" Text="{Binding Amount, StringFormat='c'}" 
                                   Margin="5" VerticalAlignment="Center" Width="45"/>
                        <TextBlock Grid.Column="1" Text="{Binding DateEntered, StringFormat=D}" 
                                   Margin="5" VerticalAlignment="Center" Width="150"/>
                        <Button Grid.Column="2" Content="Delete" Command="{Binding DeleteExpenseCommand}"
                        VerticalAlignment="Center" Padding="5,2,5,2" Width="46" Margin="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>